<%- include("header") -%>

    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">
      <% newItems.forEach(function({name, _id}){ %>
        <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=_id%>" onchange="this.form.requestSubmit();">
          <p><%= name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
        </form>
     <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="userInput" placeholder="New Item" autocomplete="off" />
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
    </div>
    
<%- include('footer') -%>
 